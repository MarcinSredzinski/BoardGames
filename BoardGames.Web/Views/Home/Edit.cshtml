@model Core.Library.Entities.BoardGame

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Board Game</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
          <label class="control-label col-md-2" >Name of the game</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Minimal number of players</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MinNumberOfPlayers, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MinNumberOfPlayers, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Maximal number of players</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaxNumberOfPlayers, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaxNumberOfPlayers, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Minimal age</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MinimalAge, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MinimalAge, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Date of first publication</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.PublicationDate, new { @Value = Model.PublicationDate.ToString("yyyy/dd/MM"), @type = "date" } ) 
                @*TextBoxFor(m => m.PublicationDate,
                    new { @Value = Model.PublicationDate.ToString("yyyy/dd/MM"), @type="date" })*@
                @*@Html.EditorFor(model => model.PublicationDate, new { htmlAtributes = new { @class = "form-control", @type="date"} })*@ 


                @Html.ValidationMessageFor(model => model.PublicationDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
